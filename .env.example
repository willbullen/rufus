# RUFUS Environment Configuration
# Copy this file to .env and update with your settings

# ===== Database Configuration =====
POSTGRES_DB=rufus
POSTGRES_USER=rufus
POSTGRES_PASSWORD=change_me_in_production

# ===== Django Configuration =====
DJANGO_SECRET_KEY=change-me-to-a-random-50-character-string-in-production
DJANGO_DEBUG=False
ALLOWED_HOSTS=*

# ===== ROS2 Configuration =====
ROS_DOMAIN_ID=42

# ===== Hardware Configuration =====
CHASSIS_PORT=/dev/ttyUSB0
ARM_PORT=/dev/ttyUSB1

# ===== ROSBridge Configuration =====
ROSBRIDGE_HOST=localhost
ROSBRIDGE_PORT=9090

# ===== Frontend Configuration =====
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# ===== Email Configuration (Optional) =====
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ===== VR Configuration (Optional) =====
VR_ENABLED=True
VR_UPDATE_RATE=60  # Hz

# ===== Perception Configuration =====
YOLO_MODEL_PATH=/models/yolov8n.pt
CAMERA_DEVICE=/dev/video0
LIDAR_PORT=/dev/ttyUSB2

# ===== Navigation Configuration =====
ENABLE_SLAM=True
ENABLE_NAV2=True
MAP_SAVE_PATH=/maps

# ===== Logging Configuration =====
LOG_LEVEL=INFO
LOG_TO_FILE=True
LOG_PATH=/var/log/rufus

